    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program (NodeJS)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "cwd": "${workspaceRoot}"
        },
        {
            "type" : "node",
            "request" : "attach",
            "name" : "Attach to ClearScript V8 (9223)",
            "address" : "127.0.0.1",
            "port" : 9223
        }
    ]
}